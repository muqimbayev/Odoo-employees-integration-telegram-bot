<odoo>
    <record id="view_employee_form_inherit_telegram" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.telegram</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='identification_group']" position="inside">
                <field name="telegram_id" widget="char"/>
            </xpath>

        </field>
    </record>
</odoo>
